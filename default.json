{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        ":automergeBranch",
        ":disableRateLimiting",
        ":dependencyDashboard",
        ":semanticCommits",
        "github>chkpwd/renovate:automerge"
    ],
    "dependencyDashboardTitle": "Renovate Dashboard 👨🏾‍💻",
    "suppressNotifications": [
        "prIgnoreNotification"
    ],
    "timezone": "Europe/Zurich",
    "commitBodyTable": true,
    "rebaseWhen": "conflicted",
    "platformCommit": true,
    "ignorePaths": [
        "**/*.sops.*"
    ]
}